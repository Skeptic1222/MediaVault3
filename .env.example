# MediaVault Windows Configuration - IIS Deployment
# Copy this file to .env and replace with actual secure values
# NEVER commit .env to version control

NODE_ENV=production
PORT=3000
BASE_PATH=/mediavault
MEDIA_PATH=D:\MediaVault

# Database Configuration - PostgreSQL
# Generate secure password: openssl rand -base64 32
DB_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mediavault
DB_USER=mediavault_user
DB_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# Security Keys - MUST BE REGENERATED FOR EACH DEPLOYMENT
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
FILESYSTEM_MASTER_KEY=GENERATE_32_BYTE_HEX_KEY
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
JWT_SECRET=GENERATE_256_BIT_BASE64_KEY
SESSION_SECRET=GENERATE_256_BIT_BASE64_KEY

# Authentication Configuration
AUTH_DISABLED=false
SKIP_AUTH=false
NO_AUTH=false

# OAuth Configuration (if using Google OAuth)
OAUTH_ENABLED=false
OAUTH_CLIENT_ID=your-client-id.apps.googleusercontent.com
OAUTH_CLIENT_SECRET=GOCSPX-your-client-secret

# File Storage Paths
UPLOAD_DIR=./uploads
TEMP_DIR=./temp
LOG_DIR=./logs

# Security Headers
SECURE_COOKIES=true
TRUST_PROXY=true
SESSION_TTL=86400000  # 24 hours in milliseconds

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=5368709120  # 5GB in bytes
ALLOWED_FILE_TYPES=image/*,video/*,audio/*,application/pdf

# Monitoring (optional)
SENTRY_DSN=
LOG_LEVEL=info

# Windows Credential Store (optional)
USE_WINDOWS_CREDENTIAL_STORE=false
CREDENTIAL_TARGET=MediaVault
